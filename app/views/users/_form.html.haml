= form_for(user) do |f|
  - if user.errors.any?
    #error_explanation
      %h2
        = pluralize(user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - user.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :surname
    = f.text_field :surname
  .field
    = f.label :age
    = f.number_field :age
  .field
    = f.label :picture
    = f.file_field :picture
  .field
    = f.label :car
    = f.text_field :car
  .field
    = f.label :sex
    = f.text_field :sex
  .field
    = f.label :distance
    = f.number_field :distance
  .actions
    = f.submit
